[user]
	email = gw@co-it.eu
	name = Gregor Woiwode
[core]
	whitespace = trailing-space, space-before-tab, -indent-with-non-tab, cr-at-eol
	quotepath = false
[apply]
	whitespace = nowarn
[alias]
	some = !git-some.sh
	flow = !$ZPLUG_HOME/repos/nvie/gitflow/git-flow
	standup = !git-standup
	ui = !/c/Tools/QGit/qgit.exe --all &
	clobber = !~/.dotfiles/git/bin/git-cleanup

	wtf = !ruby \"$(cygpath --windows --absolute ~/.dotfiles/git/bin/git-wtf.rb)\" --all --relations
	rank = !ruby \"$(cygpath --windows --absolute ~/.dotfiles/git/bin/git-rank-contributors.rb)\" $*
	publish = !ruby \"$(cygpath --windows --absolute ~/.dotfiles/git/bin/git-publish-branch.rb)\" $*
	biggest-commits = !ruby \"$(cygpath --windows --absolute ~/.dotfiles/git/bin/git-biggest-commits.rb)\" $*
	personal = !ruby \"$(cygpath --windows --absolute ~/.dotfiles/git/bin/git-personal-build.rb)\" agross $*
[color]
	ui = auto
	wtf = true
[color "diff"]
	old = bold red
	new = bold green
	meta = bold yellow
[color "branch"]
	current = black green
	local = bold green
	remote = bold red
	plain = bold yellow
[color "status"]
	added = bold red
	changed = bold green
	untracked = bold cyan
	nobranch = red reverse
[color "interactive"]
	prompt = bold blue
	error = bold red
[branch]
	autosetupmerge = true
	autosetuprebase = always
[svn]
	rmdir = true
	findcopiesharder = true
[merge]
	tool = diffmerge
	log = true
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "diffmerge"]
	cmd = ~/.dotfiles/git/tools/diffmerge-merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = true
[diff]
	tool = diffmerge
	renames = copies
	submodule = log
[difftool]
	prompt = false
[difftool "diffmerge"]
	cmd = ~/.dotfiles/git/tools/diffmerge-diff \"$LOCAL\" \"$REMOTE\"
[difftool "meld"]
	cmd = ~/.dotfiles/git/tools/meld-diff \"$LOCAL\" \"$REMOTE\"
[clean]
	requireForce = false
[rerere]
	enabled = true
	autoupdate = true
[push]
	default = simple
[status]
	#submodulesummary = true
[rebase]
	autoSquash = true
[stash]
	showPatch = true
